<%= @attraction.name %>
<%#= link_to "Show #{@attraction.name}", attraction_path(@attraction) %>
<%= form_for @ride do |f| %>
    
    <% if current_user %>
    <input type='hidden' name='ride[user_id]' value='<%=current_user.id %>'>
    <input type='hidden' name='ride[attraction_id]' value='<%=@attraction.id %>'>
    <%= f.submit "Go on this ride" %>
    <% if @user.admin %>
    <%= link_to "Add", new_attraction_path(@attraction) %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
    <%= link_to "Delete", attraction_path(@attraction) %>
    <% end %>
    <% end %>
    <% end %>